@model HabitAqui.ViewModels.SearchEmpresasViewModel

<h1>Pesquisa de Empresas</h1>


<p>Existe/m @Model.ListaEmpresas.Count empresas disponiveis.</p>

@using (Html.BeginForm("Search", "Empresas", FormMethod.Get))
{
    <div class="row">
        <div class="col-10" style="padding: 20px">
            Pesquisar:
            <input type="text" for="TextoAPesquisar" id="TextoAPesquisar" name="TextoAPesquisar" />
            Disponível:
            <input type="checkbox" for="disponivel" id="disponivel" name="disponivel" value="true" />
            <input type="hidden" for="disponivel" id="disponivel" name="disponivel" value="false" />
            <input type="submit" class="btn btn-primary" value="Search" />
        </div>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>
                Nome Empresa
            </th>
            <th>
                Classificação
            </th>
            <th>
                Habitações
            </th>
            <th>
                Disponível
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListaEmpresas)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Avaliacao)
                </td>
                <td>
                    @if (item.Habitacoes.Count == 0)
                    {
                        <a>Sem Habitações para mostrar</a>
                    }
                    @if (item.Habitacoes.Count != 0)
                    {
                        var counter = 0;
                        @foreach (var habi in item.Habitacoes)
                        {
                            var habidisplay = habi.Empresa + " " + habi.Tipologia;
                            counter++;
                            if (counter == item.Habitacoes.Count)
                            {
                                habidisplay += " ";
                            }
                            else
                            {
                                habidisplay += ", ";
                            }
                            @Html.DisplayFor(modelItem => habidisplay)
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Disponivel)
                </td>
            </tr>
        }
    </tbody>
</table>
