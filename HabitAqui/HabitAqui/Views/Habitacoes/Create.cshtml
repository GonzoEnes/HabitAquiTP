@model HabitAqui.Models.Habitacao

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <h1 class="text-center">Criar Habitação</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IdContrato" class="form-label"></label>
                    <input asp-for="IdContrato" class="form-control" />
                    <span asp-validation-for="IdContrato" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input class="form-check-input" asp-for="Disponivel" />
                    <label class="form-check-label" for="Disponivel">@Html.DisplayNameFor(model => model.Disponivel)</label>
                </div>

                <div class="mb-3">
                    <label asp-for="Localizacao" class="form-label"></label>
                    <input asp-for="Localizacao" class="form-control" />
                    <span asp-validation-for="Localizacao" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="IdArrendamento" class="form-label"></label>
                    <input asp-for="IdArrendamento" class="form-control" />
                    <span asp-validation-for="IdArrendamento" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="IdLocador" class="form-label"></label>
                    <input asp-for="IdLocador" class="form-control" />
                    <span asp-validation-for="IdLocador" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Avaliacao" class="form-label"></label>
                    <input asp-for="Avaliacao" class="form-control" />
                    <span asp-validation-for="Avaliacao" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Danos" class="form-label"></label>
                    <input asp-for="Danos" class="form-control" />
                    <span asp-validation-for="Danos" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Observacoes" class="form-label"></label>
                    <input asp-for="Observacoes" class="form-control" />
                    <span asp-validation-for="Observacoes" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="IdCategoria" class="form-label"></label>
                    <input asp-for="IdCategoria" class="form-control" />
                    <span asp-validation-for="IdCategoria" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="NBath" class="form-label"></label>
                    <input asp-for="NBath" class="form-control" />
                    <span asp-validation-for="NBath" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Area" class="form-label"></label>
                    <input asp-for="Area" class="form-control" />
                    <span asp-validation-for="Area" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="NBedroom" class="form-label"></label>
                    <input asp-for="NBedroom" class="form-control" />
                    <span asp-validation-for="NBedroom" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Estado" class="form-label"></label>
                    <input asp-for="Estado" class="form-control" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <!-- Adicione outros campos do formulário da mesma maneira -->

                <div class="mb-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>

            </form>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
