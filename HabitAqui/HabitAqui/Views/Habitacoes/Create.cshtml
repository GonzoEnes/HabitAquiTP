@model HabitAqui.Models.Habitacao

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <h1 class="text-center">Criar Habitação</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">
                    <input class="form-check-input" asp-for="Disponivel" />
                    <label class="form-check-label" for="Disponivel">@Html.DisplayNameFor(model => model.Disponivel)</label>
                </div>

                <div class="mb-3">
                    <label asp-for="Localizacao" class="form-label"></label>
                    <input asp-for="Localizacao" class="form-control" />
                    <span asp-validation-for="Localizacao" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CategoriaId" class="form-label"></label>
                    <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.ListaCategorias"></select>
                </div>
                <div class="mb-3">
                    <label asp-for="NBath" class="form-label"></label>
                    <input asp-for="NBath" class="form-control" />
                    <span asp-validation-for="NBath" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PeriodoMinimoArrendamento" class="form-label"></label>
                    <input asp-for="PeriodoMinimoArrendamento" class="form-control" />
                    <span asp-validation-for="PeriodoMinimoArrendamento" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="TipologiaId" class="form-label"></label>
                    <select asp-for="TipologiaId" asp-items="ViewBag.ListaTipologias" class="form-control"></select>
                </div>
         
                    <div class="mb-3">
                        <label asp-for="EmpresaId" class="form-label"></label>
                        <select asp-for="EmpresaId" class="form-control" asp-items="ViewBag.ListaEmpresas"></select>
                    </div>
                
                


                <div class="mb-3">
                    <label asp-for="Area" class="form-label"></label>
                    <input asp-for="Area" class="form-control" />
                    <span asp-validation-for="Area" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="NBedroom" class="form-label"></label>
                    <input asp-for="NBedroom" class="form-control" />
                    <span asp-validation-for="NBedroom" class="text-danger"></span>
                </div>
                @*<div class="mb-3">
                    <label asp-for="Estado" class="form-label"></label>
                    <input asp-for="Estado" class="form-control" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>*@
                <div class="mb-3">
                    <label asp-for="Custo" class="form-label"></label>
                    <input asp-for="Custo" class="form-control" />
                    <span asp-validation-for="Custo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>

                

              
                    @* <div class="form-group">
                        <label asp-for="FileName"></label>
                        <input type="file" name="file" accept=".jpg, .png" />
                    </div>
                    <button type="submit">Upload</button> *@

            </form>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
