
@model HabitAqui.ViewModels.HabitacoesViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl py-6">
    <div class="container">
        <div class="row g-0 gx-5 align-items-end">
            <div class="col-lg-8">
                <div class="text-start mx-auto mb-5 wow slideInLeft" data-wow-delay="0.1s">

                    <h1 class="mb-3">Propriedades</h1>
                    <p>Aqui poderá listar todas as habitações pertencentes à sua empresa.</p>

                    <form asp-controller="Habitacoes" asp-action="SearchEmpresa" method="post">
                        <div class="input-group">
                            

                            <select asp-for="Ordenar" class="form-control ms-2">
                                <option selected>Ordenar</option>
                                <option value="1">Menor Custo</option>
                                <option value="2">Maior Custo</option>
                                <option value="3">Menor Avaliação</option>
                                <option value="4">Maior Avaliação</option>
                            </select>

                            <select asp-for="Categoria" asp-items="ViewBag.ListaCategorias" class="form-select border-0 py-3">
                                <option value="" disabled selected hidden>Categoria</option>
                            </select>

                            <button type="submit" class="btn btn-default ms-2 me-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#00B98E" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-warning" aria-label="Search">
                                    <circle cx="11" cy="11" r="8" />
                                    <line x1="21" y1="21" x2="16.65" y2="16.65" />
                                </svg>
                            </button>

                            @*<a asp-controller="Habitacoes" asp-action="Index" class="btn btn-secondary" style="background-color: #00B98E;">
                                Limpar Filtros
                            </a>*@
                        </div>
                    </form>
                </div>
            </div>
            @if (User.IsInRole("Funcionario") || User.IsInRole("Gestor") || User.IsInRole("Admin"))
            {
                <div class="col-lg-4 text-end">
                    <div class="mx-auto mb-5 wow slideInRight" data-wow-delay="0.1s">
                        <a class="btn btn-success" asp-controller="Habitacoes" asp-action="Create">Nova Habitação</a>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

<div class="tab-content">
    <div id="tab-1" class="tab-pane fade show p-0 active">
        <div class="row g-4">
            @foreach (var Habitacao in Model.ListaHabitacoes)
            {
                if (Habitacao.Disponivel)
                {
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="property-item rounded overflow-hidden">
                            <div class="position-relative overflow-hidden">
                                <a asp-controller="Habitacoes" asp-action="Details" asp-route-id="@Habitacao.Id"><img class="img-fluid" src="~/img/@Habitacao.ImagePath" alt=""></a>
                                <div class="bg-white rounded-top text-primary position-absolute start-0 bottom-0 mx-4 pt-1 px-3">@Habitacao.Tipologia?.Nome</div>
                                <div class="bg-white rounded-top text-primary position-absolute end-0 bottom-0 mx-4 pt-1 px-3">@Habitacao.Categoria?.Nome</div>
                            </div>
                            <div class="p-4 pb-0">
                                <h5 class="text-primary mb-3">@Habitacao.Custo €</h5>
                                <a asp-controller="Habitacoes" asp-action="Details" asp-route-id="@Habitacao.Id" class="d-block h5 mb-2">@Habitacao.Nome</a>
                                <div class="d-flex align-items-center">
                                    @if (Habitacao.MediaAvaliacoes != null)
                                    {
                                        <i class="fa fa-star" style="color:#00B98E;"></i>
                                        <span class="me-2"> @Habitacao.MediaAvaliacoes / 5,00</span>

                                    }
                                    else
                                    {
                                        <i class="fa fa-star" style="color:#00B98E;"></i>
                                        <span class="me-2">Sem avaliação!</span>
                                    }


                                </div>
                                @if (Habitacao.Empresa != null)
                                {
                                    <i class="fa fa-user text-primary me-2">@Habitacao.Empresa?.Nome</i>

                                }
                                else
                                {
                                    <i class="fa fa-user" style="color:#00B98E;"></i>
                                    <span class="me-2">Sem empresa!</span>
                                }

                                <p><i class="fa fa-map-marker-alt text-primary me-2"></i>@Habitacao.Localizacao</p>
                            </div>
                            <div class="d-flex border-top">
                                <small class="flex-fill text-center border-end py-2"><i class="fa fa-ruler-combined text-primary me-2"></i>@Habitacao.Area m²</small>
                                <small class="flex-fill text-center border-end py-2"><i class="fa fa-bed text-primary me-2"></i>@Habitacao.NBedroom Quartos</small>
                                <small class="flex-fill text-center py-2"><i class="fa fa-bath text-primary me-2"></i>@Habitacao.NBath Banho</small>
                            </div>
                        </div>
                    </div>
                }

            }
        </div>
    </div>
</div>
