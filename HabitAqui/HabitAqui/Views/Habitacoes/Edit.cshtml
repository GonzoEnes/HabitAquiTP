@model HabitAqui.Models.Habitacao

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Habitação - @Model.Nome</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
           
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Disponivel" /> @Html.DisplayNameFor(model => model.Disponivel)
                </label>
            </div>
            <div class="form-group form-check">
                <select asp-for="TipologiaId" asp-items="ViewBag.ListaTipologias" class="form-select border-0 py-3">
                    <option value="" disabled selected hidden>Tipo de Habitação</option>
                </select>
            </div>
            <div class="form-group form-check">
                <select asp-for="CategoriaId" asp-items="ViewBag.ListaCategorias" class="form-select border-0 py-3">
                    <option value="" disabled selected hidden>Categoria da Habitação</option>
                </select>
            </div>
            @if (User.IsInRole("Admin"))
            {
                <div class="form-group form-check">
                    <select asp-for="EmpresaId" asp-items="ViewBag.ListaEmpresas" class="form-select border-0 py-3">
                        <option value="" disabled selected hidden>Empresa</option>
                    </select>
                </div>
            }
            <div class="form-group">
                <label asp-for="Localizacao" class="control-label">Localização</label>
                <input asp-for="Localizacao" class="form-control" />
                <span asp-validation-for="Localizacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PeriodoMinimoArrendamento" class="control-label">Localização</label>
                <input asp-for="PeriodoMinimoArrendamento" class="form-control" />
                <span asp-validation-for="PeriodoMinimoArrendamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NBath" class="control-label">Número de Casas de Banho</label>
                <input asp-for="NBath" class="form-control" />
                <span asp-validation-for="NBath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NBedroom" class="control-label">Número de Quartos</label>
                <input asp-for="NBedroom" class="form-control" />
                <span asp-validation-for="NBedroom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Area" class="control-label">Localização</label>
                <input type="decimal" step="any" asp-for="Area" class="form-control" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Custo" class="control-label">Custo</label>
                <input type="decimal" step="any" asp-for="Custo" class="form-control" />
                <span asp-validation-for="Custo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Fotografia" class="form-label"></label>
                <input asp-for="Fotografia" type="file" class="form-control" accept=".jpg, .jpeg, .png" />
            </div>
         
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListaHabitacoesByEmpresaId">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
