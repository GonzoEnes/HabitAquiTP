@model HabitAqui.Models.Habitacao

@{
   ViewData["Title"] = "Detalhes - " + Model?.Nome;
    
}


<style>
    /* Add custom styles for increased text size */
    h1 {
        font-size: 28px; /* Adjust the value as needed */
    }

    dt, dd {
        font-size: 22px; /* Adjust the value as needed */
    }

    .btn {
        height: 40px; /* Adjust the value as needed */
    }

    /* Add more styles as needed for other elements */
</style>


<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-6">
                <div class="mb-5 wow slideInLeft" data-wow-delay="0.1s">
                    <h1 class="mb-3">Detalhes: @Model?.Nome</h1>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-3 fw-bold">Nome:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                        <dt class="col-sm-3 fw-bold">Contrato:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.ContratoId)</dd>

                        <dt class="col-sm-3 fw-bold">Categoria:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoriaId)</dd>

                        <dt class="col-sm-3 fw-bold">Disponível:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Disponivel)</dd>

                        <dt class="col-sm-3 fw-bold">Localização:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Localizacao)</dd>

                        <dt class="col-sm-3 fw-bold">Arrendamento:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.ArrendamentoId)</dd>

                        <dt class="col-sm-3 fw-bold">Locador:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.LocadorId)</dd>

                        <dt class="col-sm-3 fw-bold">Avaliação:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Avaliacao)</dd>
@*
                        <dt class="col-sm-3 fw-bold">Danos:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Danos)</dd>

                        <dt class="col-sm-3 fw-bold">Observações:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Observacoes)</dd>*@
                    </dl>
                </div>
            </div>

            <div class="col-lg-6 position-relative overflow-hidden wow slideInRight" data-wow-delay="0.1s">
                <a asp-controller="Habitacoes" asp-action="Details" asp-route-id="@Model.Id">
                    <img class="img-fluid" src="~/img/@Model?.Image" alt="">
                </a>
                <div class="bg-white rounded-top text-primary position-absolute start-0 bottom-0 mx-4 pt-1 px-3">@Model.Tipo</div>
            </div>

            <div class="col-lg-6">
                <div class="text-start mb-5 wow slideInLeft" data-wow-delay="0.1s">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
                    <a class="btn btn-secondary ms-2" asp-action="Index">Voltar à Lista</a>
                </div>
            </div>
        </div>
    </div>
</div>
