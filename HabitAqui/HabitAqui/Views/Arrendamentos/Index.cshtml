@model IEnumerable<HabitAqui.Models.Arrendamento>

@{
    ViewData["Title"] = "Index";
}

<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-0 gx-5 align-items-end">
            <div class="col-lg-6">
                <div class="text-start mx-auto mb-5 wow slideInLeft" data-wow-delay="0.1s">

                    <h1 class="mb-3">Os Meus Arrendamentos</h1>
                    <p>Aqui pode consultar todos os seus arrendamentos!</p>

                    <form asp-controller="Habitacoes" asp-action="Search" method="post">
                        <div class="input-group">
                            <input type="text" name="TextoAPesquisar"
                                   id="TextoAPesquisar" placeholder="Pesquisar..."
                                   class="form-control form-control-sm" />

@*                            <select asp-for="Ordenar" class="form-control ms-2">
                                <option selected>Ordenar Por</option>
                                <option value="1">Menor Custo</option>
                                <option value="2">Maior Custo</option>
                                <option value="3">Menor Avaliação</option>
                                <option value="4">Maior Avaliação</option>
                            </select>*@

                            <button type="submit" class="btn btn-default ms-2 me-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#00B98E" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-warning" aria-label="Search">
                                    <circle cx="11" cy="11" r="8" />
                                    <line x1="21" y1="21" x2="16.65" y2="16.65" />
                                </svg>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="text-end mx-auto mb-5 wow slideInRight" data-wow-delay="0.1s">
                    <a class="btn btn-success" asp-controller="Arrendamentos" asp-action="Create">Novo Arrendamento</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="tab-content">
    <div id="tab-1" class="tab-pane fade show p-0 active">
        <div class="row g-4">
            @foreach (var Arrendamento in Model)
            {
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="property-item rounded overflow-hidden">
                        <div class="position-relative overflow-hidden">
                           <a asp-controller="Arrendamentos" asp-action="Details" asp-route-id="@Arrendamento.Id"><img class="img-fluid" src="~/img/@Arrendamento.Habitacao.Image" alt=""></a>
                            <div class="bg-white rounded-top text-primary position-absolute start-0 bottom-0 mx-4 pt-1 px-3">@Arrendamento.Habitacao.Tipologia.Nome</div>
                           </div>
                        <div class="p-4 pb-0">
                            <h5 class="text-primary mb-3">@Arrendamento.CustoArrendamento€</h5>
                            <a asp-controller="Arrendamentos" asp-action="Details" asp-route-id="@Arrendamento.Id" class="d-block h5 mb-2">@Arrendamento.Habitacao.Nome</a>
                            <p><i class="fa fa-map-marker-alt text-primary me-2"></i>@Arrendamento.Habitacao.Localizacao</p>
                        </div>
                        <div class="d-flex border-top">
                            <small class="flex-fill text-center border-end py-2"><i class="fa fa-clock text-primary me-2"></i>@Arrendamento.DataInicio</small>
                            <small class="flex-fill text-center border-end py-2"><i class="fa fa-clock text-primary me-2"></i>@Arrendamento.DataFinal</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
