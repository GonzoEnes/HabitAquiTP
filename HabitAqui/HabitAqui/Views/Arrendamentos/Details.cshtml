@model HabitAqui.Models.Arrendamento

@{
    ViewData["Title"] = "Detalhes - Arrendamento " + Model?.Id;

}

<style>
    /* Add custom styles for increased text size */
    h1 {
        font-size: 28px; /* Adjust the value as needed */
    }

    dt, dd {
        font-size: 22px; /* Adjust the value as needed */
    }

    .btn {
        height: 40px; /* Adjust the value as needed */
    }

    /* Add more styles as needed for other elements */
</style>


<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-6">
                <div class="mb-5 wow slideInLeft" data-wow-delay="0.1s">
                    <h1 class="mb-3">Detalhes sobre o arrendamento da habitação @Model?.Habitacao.Nome </h1>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3 fw-bold">Tipo:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Habitacao.Tipologia.Nome)</dd>

                        <dt class="col-sm-3 fw-bold">Categoria:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Habitacao.Categoria.Nome)</dd>

                        <dt class="col-sm-3 fw-bold">Localização:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Habitacao.Localizacao)</dd>

                        <dt class="col-sm-3 fw-bold">Empresa:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Habitacao.Empresa.Nome)</dd>

                        @if (Model.Habitacao.MediaAvaliacoes == null)
                        {
                            <dt class="col-sm-3 fw-bold">Media de Avaliações:</dt>
                            <dd class="col-sm-9">Esta propriedade não possui avaliação de momento.</dd>
                        }
                        else
                        {
                            <dt class="col-sm-3 fw-bold">Media de Avaliações:</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Habitacao.MediaAvaliacoes) / 5.00</dd>
                        }
                        @*
                        <dt class="col-sm-3 fw-bold">Danos:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Danos)</dd>

                        <dt class="col-sm-3 fw-bold">Observações:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Observacoes)</dd>*@

                    @if (User.IsInRole("Funcionario") || User.IsInRole("Gestor") || User.IsInRole("Admin"))
                    {
                        @if (!(bool)Model.Confirmado)
                        {
                            <div class="form-group">
                                <a class="btn btn-success" asp-route-id="@Model.Id" asp-controller="Arrendamentos" asp-action="AceitarArrendamento">Confirmar Arrendamento</a>
                            </div>
                        }
                        <div class="form-group">
                            <a class="btn btn-danger" asp-route-id="@Model.Id" asp-controller="Arrendamentos" asp-action="RejeitarArrendamento">Rejeitar Arrendamento</a>
                        </div>
                    }

                    else if (User.IsInRole("Cliente"))
                    {
                        if (Model.Confirmado == false)
                        {
                            <dt class="col-sm-3 fw-bold">Data pedido de arrendamento:</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.DataPedido)</dd>
                            <dt class="col-sm-3 fw-bold">Confirmado:</dt>
                            <dd class="col-sm-9">Este arrendamento ainda não foi confirmado por um dos nossos profissionais. Por favor, aguarde.</dd>
                        }
                        else
                        {
                            <dt class="col-sm-3 fw-bold">Data de Inicio:</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.DataInicio)</dd>

                            <dt class="col-sm-3 fw-bold">Data de Termino:</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.DataFinal)</dd>
                         }
                       if(Model.AvaliacaoId!=null)
                       {
                                <dt class="col-sm-3 fw-bold">Avaliação:</dt>
                                <dd class="col-sm-9">@Html.DisplayFor(model => model.Avaliacao.Nota) / 5.00</dd>
                       }
                    }
                    </dl>
                </div>
            </div>

            @if (User.IsInRole("Funcionario") || User.IsInRole("Gestor"))
            {
                @if ((bool)Model.Confirmado)
                {
                    
                    <a asp-action="EstadoHabitacao" asp-route-id="@Model?.Id">Editar Estado Da Habitação - Entrega & Receção</a>
                    <br>
                    <br>
                }

            }

            @*<div class="col-lg-6 position-relative overflow-hidden wow slideInRight" data-wow-delay="0.1s">
            <a asp-controller="Habitacoes" asp-action="Details" asp-route-id="@Model.Id">
            <img class="img-fluid" src="~/img/@Model?.Image" alt="">
            </a>
            <div class="bg-white rounded-top text-primary position-absolute start-0 bottom-0 mx-4 pt-1 px-3">@Model.Tipologia.Nome</div>
            </div>*@

            <div class="col-lg-6">
                <div class="text-start mb-5 wow slideInLeft" data-wow-delay="0.1s">

                    @if (User.IsInRole("Funcionario") || User.IsInRole("Gestor"))
                    {
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
                        <a asp-action="ListaArrendamentoByEmpresa">Voltar À Lista</a>
                    }
                    else
                    {
                        <a class="btn btn-secondary ms-2" asp-action="Index">Voltar à Lista</a>
                        @if (Model.AvaliacaoId == null)
                        {
                            <dt class="col-sm-3 fw-bold">Avaliação:</dt>
                            <a class="btn btn-secondary ms-2" asp-action="Avaliar" asp-route-id="@Model?.Id">Avaliar Arrendamento</a>
                        }
                    }
                   
                </div>
            </div>
        </div>
    </div>
</div>
