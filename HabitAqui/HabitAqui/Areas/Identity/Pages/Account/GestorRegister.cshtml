@page
@model GestorRegisterModel
@{
    ViewData["Title"] = "Registo";
}




@if (User.IsInRole("Gestor"))
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h1 class="mb-0">@ViewData["Title"]</h1>
                    </div>

                    <div class="card-body">
                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <h2>Cria um novo Gestor.</h2>
                            <hr />

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-floating mb-3 mt-3">

                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                <label asp-for="Input.Email"></label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>

                            </div>

                            <div class="form-floating mb-3 mt-3">

                                <input asp-for="Input.PrimeiroNome" class="form-control" autocomplete="first name" aria-required="true" />
                                <label asp-for="Input.PrimeiroNome"></label>
                                <span asp-validation-for="Input.PrimeiroNome" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3 mt-3">

                                <input asp-for="Input.UltimoNome" class="form-control" autocomplete="last name" aria-required="true" />
                                <label asp-for="Input.UltimoNome"></label>
                                <span asp-validation-for="Input.UltimoNome" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3 mt-3">

                                <input asp-for="Input.DataDeNascimento" class="form-control" autocomplete="born date" aria-required="true" />
                                <label asp-for="Input.DataDeNascimento"></label>
                                <span asp-validation-for="Input.DataDeNascimento" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3 mt-3">

                                <input asp-for="Input.NIF" class="form-control" autocomplete="nif" aria-required="true" />
                                <label asp-for="Input.NIF"></label>
                                <span asp-validation-for="Input.NIF" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3 mt-3">

                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                                <label asp-for="Input.Password"></label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3 mt-3">

                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                                <label asp-for="Input.ConfirmPassword"></label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary btn-block">Register</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-6 offset-md-3">
                <section>
                    <h3>Use another service to register.</h3>
                    <hr />

                    @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div>
                            <p>
                                There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                    article
                                    about setting up this ASP.NET application to support logging in via external services
                                </a>.
                            </p>
                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            <div>
                                <p>
                                    @foreach (var provider in Model.ExternalLogins)
                                    {
                                        <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                    }
                                </p>
                            </div>
                        </form>
                    }
                </section>
            </div>
        </div>
    </div>

    @section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }
}